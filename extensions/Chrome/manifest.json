{
  "manifest_version": 3,
  "name": "Multi-AI Chat Manager Assistant",
  "version": "1.0.0",
  "description": "Auto-focus input fields for Multi-AI Chat Manager on all AI chat platforms",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://grok.com/*",
        "https://x.com/i/grok/*",
        "https://chat.deepseek.com/*",
        "https://www.deepseek.com/*",
        "https://copilot.microsoft.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}